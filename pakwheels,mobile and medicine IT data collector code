    cont++;
    }
     int strength=1,strength1=0,count1,count2,count3,count4,con1,con2,con3,con4;
   for(int i=0; i<3; i++)
   {
      if(centrum[i].mg==strength)
    {
        count1++;
    }
     if(mascon[i].mg==strength)
    {
        count2++;
    }
     if(belle[i].mg==strength)
    {
        count3++;
    }
     if(gnc[i].mg==strength)
     {
         count4;
     }
      if(centrum[i].mg==strength1)
    {
        con1++;
    }
     if(mascon[i].mg==strength1)
    {
        con2++;
    }
     if(belle[i].mg==strength1)
    {
        con3++;
    }
     if(gnc[i].mg==strength1)
     {
         con4;
     }
   }
    cout<<setw(15)<<"Name"<<setw(25)<<"filled with 1mg"<<"empty"<<endl;
